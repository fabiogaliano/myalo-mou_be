{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "pretty": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["./src/**/*", "./**/*.ts"],
  "exclude": ["node_modules", "tests"]
}
